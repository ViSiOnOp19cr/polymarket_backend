generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int   @default(autoincrement()) @unique
  email         String
  password      String
  isAdmin       Boolean
  bets          Bets[]

}

model Bets {
  id            Int     @default(autoincrement())  @unique
  type          String 
  userId        Int   
  user          User     @relation(fields:[userId], references: [id])

}

model Market {
  id            Int        @default(autoincrement())  @unique
  description   String
  isOpen        Boolean
}
