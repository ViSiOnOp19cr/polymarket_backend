generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int   @id @default(autoincrement()) 
  email         String    @unique
  password      String
  isAdmin       Boolean?
  bets          Bets[]
  balance       Int
  transaction   Transactions[]
  market         Market[]
}

model Bets {
  id            Int   @id   @default(autoincrement())  
  type          String 
  userId        Int   
  user          User     @relation(fields:[userId], references: [id])
  marketId      Int 
  status        BetStatus
  amount        Int 
  outcome_chosen      BetOutcome
  odds          Float    // Odds locked in when this bet was placed
  isLocked      Boolean
  market        Market     @relation(fields:[marketId], references:[id])
  createdAt    DateTime     @default(now())
}

model Market {
  id            Int      @id   @default(autoincrement())  
  description   String
  title         String
  isOpen        Boolean
  end_time      DateTime
  bets          Bets[]
  isLocked      Boolean
  catagory      MarketCatagory
  outcome       BetOutcome?
  Oddsyes       Float?    @default(2.0)  // Current odds for YES outcome
  Oddsno        Float?    @default(2.0)  // Current odds for NO outcome
  createdAt    DateTime    @default(now())
  creatorId     Int
  creator          User    @relation(fields: [creatorId], references: [id])
}

model Transactions {
  id          Int      @id @default(autoincrement())  
  type        TransactionType
  amount      Int 
  userId      Int 
  user        User    @relation(fields:[userId],references:[id])
  createdAt   DateTime    @default(now())
}

enum BetStatus {
  PENDING
  WON
  LOST
}
enum MarketCatagory{
  Sports
  Esports
}

enum BetOutcome {
  YES
  NO
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  BET_PLACED
  BET_WON
}
